{
  "editor.insertSpaces": false,
  "editor.detectIndentation": false,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "boundary",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "TodoParser": {
    "include": [
      "ts",
      "js",
      "html",
      "scss"
    ],
    "folderExclude": [
      "node_modules",
      ".vscode"
    ],
    "only": [
      "src"
    ]
  },
  "tslint.exclude": [
    "**/_config/**/*.js",
    "**/_scripts/**/*.js"
  ],
  "vsicons.presets.angular": false
}
